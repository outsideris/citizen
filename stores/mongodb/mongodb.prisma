generator client {
  provider      = "prisma-client-js"
  output        = "./client"
  binaryTargets = ["darwin", "darwin-arm64", "windows", "debian-openssl-1.1.x", "linux-musl"]
}

datasource db {
  provider = "mongodb"
  url      = env("CITIZEN_DATABASE_URL")
}

model Module {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  namespace    String
  name         String
  provider     String
  version      String
  owner        String
  location     String?
  definition   String?
  downloads    Int      @default(0)
  published_at DateTime @default(now())
  root         Json?
  submodules   Json[]
}

model Provider {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  namespace     String
  type          String
  version       String
  protocols     String[]
  platforms     Json[]
  gpgPublicKeys Json[]
  published_at  DateTime @default(now())
}
