    "get-port": "^5.1.1",
    "mocha": "^8.2.1",
    "ngrok": "^3.3.0",
    "nock": "^13.0.4",
    "nodemon": "^2.0.6",
    "pkg": "^4.4.9",
    "supertest": "^6.0.1",
    "unzipper": "^0.10.11"
