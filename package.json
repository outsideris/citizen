    "express": "^4.17.1",
    "glob-gitignore": "^1.0.14",
    "globby": "^11.0.1",
    "gopher-hcl": "^0.2.0",
    "helmet": "^4.2.0",
    "jten": "^0.2.0",
    "listr": "^0.14.2",
    "lodash": "^4.17.20",
    "mkdirp": "^1.0.4",
    "mongoose": "^5.10.13",
    "morgan": "^1.10.0",
    "multiparty": "^4.2.2",
