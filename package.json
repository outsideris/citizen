    "eslint": "^5.12.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-mocha": "^5.2.1",
    "get-port": "^4.1.0",
    "mocha": "^5.0.4",
    "ngrok": "^3.1.0",
    "nock": "^10.0.6",
    "nodemon": "^1.18.9",
    "pkg": "^4.3.7",
    "supertest": "^3.3.0",
    "unzipper": "^0.9.7"
  },
  "pkg": {
    "assets": [
      "views/**/*"
    ]
  }
